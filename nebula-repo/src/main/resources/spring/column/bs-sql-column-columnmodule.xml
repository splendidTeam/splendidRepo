	<bean id="ColumnModule.findAllColumnModuleList" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select * from T_COL_COLUMN_MODULE 
		       			 where lifecycle !=2
		       		
                 ]]>
			</value>
		</constructor-arg>
	</bean>	
	
	<bean id="ColumnModule.findColumnModuleListByIds" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select * from T_COL_COLUMN_MODULE where 
		       		id in (
		       		#foreach( $id in $ids )
    					$id,
					 #end
		       		 -1)
		       		
                 ]]>
			</value>
		</constructor-arg>
	</bean>	
	
	
	<bean id="ColumnModule.findColumnModuleListByQueryMap" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select * from T_COL_COLUMN_MODULE where 
		       				1=1
		       				#if($code)
		       					and CODE=:code
		       				#end
		       			
		       				#if($name)
		       					and NAME=:name
		       				#end
		       				#if($nameForLike)
		       					and NAME like :nameForLike
		       				#end
		       			
		       				#if($type)
		       					and TYPE=:type
		       				#end
		       			
		       				#if($publishTime)
		       					and PUBLISH_TIME >= :publishTimeStart
		       				#end
		       				#if($publishTime)
		       					and PUBLISH_TIME <= :publishTimeEnd
		       				#end
		       			
		       				#if($pageId)
		       					and PAGE_ID=:pageId
		       				#end

		       				#if($pageCode)
		       					and PAGE_ID=(select id from T_COL_COLUMN_PAGE where CODE = :pageCode)
		       				#end
		       				
                 ]]>
			</value>
		</constructor-arg>
	</bean>	
	
