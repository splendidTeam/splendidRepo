	<bean id="ColumnModule.findColumnModuleByCode" class="loxia.dao.support.DynamicQueryHolder">
		<description>通过code查询ColumnModule</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select 
						tccm.* 
					from T_COL_COLUMN_MODULE tccm
					left join t_col_column_page tccg on  tccg.id = tccm.page_id
					where tccm.code = :code and tccg.code = :pageCode
                 ]]>
			</value>
		</constructor-arg>
	</bean>

	<bean id="ColumnModule.findColumnModuleCommandByPageCode" class="loxia.dao.support.DynamicQueryHolder">
		<description>通过code查询ColumnModule</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select 
						tccm.* 
					from T_COL_COLUMN_MODULE tccm
					left join t_col_column_page tccg on  tccg.id = tccm.page_id
					where tccg.code = :pageCode order by tccm.id
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="ColumnModule.findColumnModuleByPageCodeAndModuleCode" class="loxia.dao.support.DynamicQueryHolder">
		<description>通过pagecode和moduleCode查询ColumnModule</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		SELECT *
					FROM t_col_column_module
					WHERE code = :moduleCode
						AND page_id IN (SELECT id
							FROM t_col_column_page
							WHERE code = :pageCode)
                 ]]>
			</value>
		</constructor-arg>
	</bean>		
	
	<bean id="ColumnModule.updateColModPubTimById" class="loxia.dao.support.DynamicQueryHolder">
		<description>修改发布时间</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		update t_col_column_module set publish_time = :publishTime where id = :id
                 ]]>
