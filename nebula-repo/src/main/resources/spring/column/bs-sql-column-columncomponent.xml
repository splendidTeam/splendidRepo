	<bean id="ColumnComponent.findColumnComponentByPageCode" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select 
						tccg.code as pageCode,
						tccm.code as moduleCode,
						tccc.id as id,
						tccc.description as description,
						tccc.ext as ext,
						tccc.img as img,
						tccc.module_id as moduleId,
						tccc.target_id as targetId,
						tccc.title as title,
						tccc.url as url,
						tccm.type as type,
						tccm.publish_time as publishTime,
						tccc.img_width as imgWidth,
						tccc.img_height as imgHeight,
						tccc.sort_no as sortNo
					from t_col_column_component tccc
					left join t_col_column_module tccm on tccc.module_id = tccm.id 
					left join t_col_column_page tccg on tccg.id = tccm.page_id
					where tccg.code = :pageCode order by tccc.sort_no

                 ]]>
			</value>
		</constructor-arg>
	</bean>	
	
