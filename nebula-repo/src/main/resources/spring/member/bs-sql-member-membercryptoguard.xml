		       				#end

		       			
		       				#if($question)
		       					and QUESTION=:question
		       				#end

		       			
		       				#if($answer)
		       					and ANSWER=:answer
		       				#end

		       			
		       				#if($sort)
		       					and SORT=:sort
		       				#end

		       			
		       				#if($lifecycle)
		       					and LIFECYCLE=:lifecycle
		       				#end
				       		#if($lifecycle)
				       			and lifecycle =:lifecycle
				       		#end
		       				
                 ]]>
			</value>
		</constructor-arg>
	</bean>	
	
	
	<bean id="MemberCryptoguard.enableOrDisableMemberCryptoguardByIds" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		update T_MEM_CRYPTOGUARD
		       		set lifecycle=:state
		       		 where 
		       		id in (
		       		#foreach( $id in $ids )
    					$id,
					 #end
		       		 -1)
		       		 
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="MemberCryptoguard.removeMemberCryptoguardByIds" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		update T_MEM_CRYPTOGUARD
		       		set lifecycle=2
		       		 where 
		       		id in (
		       		#foreach( $id in $ids )
    					$id,
					 #end
		       		 -1)
		       		 
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	<bean id="MemberCryptoguard.removeMemberCryptoguardByMemberId" class="loxia.dao.support.DynamicQueryHolder">
		<description></description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		update T_MEM_CRYPTOGUARD
		       		set lifecycle=2
		       		 where MEMBER_ID=:memberId
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
