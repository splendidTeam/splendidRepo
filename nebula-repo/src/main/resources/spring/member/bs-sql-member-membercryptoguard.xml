	<bean id="MemberCryptoguard.findByMemberId" class="loxia.dao.support.DynamicQueryHolder">
		<description>通过id用户获取密保问题</description>
		<constructor-arg>
			<value>
				<![CDATA[  
					select *
					from t_mem_cryptoguard
					where
					   lifecycle=1 and
						member_id = :memberId
				]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="MemberCryptoguard.findByQa" class="loxia.dao.support.DynamicQueryHolder">
		<description>验证密保问题</description>
		<constructor-arg>
			<value>
				<![CDATA[  
					select *
					from t_mem_cryptoguard
					where
						question = :q and answer = :a
				]]>
			</value>
		</constructor-arg>
	</bean>
	
</beans>