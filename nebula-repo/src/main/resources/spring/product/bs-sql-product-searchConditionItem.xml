<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="SearchConditionItem.findItemByPropertyValueId" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据PropertyValueId查询该分类下的所有SearchConditionItem </description>
		<constructor-arg>
			<value>
				<![CDATA[ 
					SELECT * from t_pd_search_con_item where property_value_id = :pValueId  and lifecycle = 1
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="SearchConditionItem.findItemBySearchId" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据searchConditionId查询该sid下的所有SearchConditionItem </description>
		<constructor-arg>
			<value>
				<![CDATA[ 
					SELECT * from t_pd_search_con_item where codition_id=:searchId  and lifecycle = 1
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="SearchConditionItem.findItemByPropertyId" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据propertyId查询该propertyId对应的所有SearchConditionItem </description>
		<constructor-arg>
			<value>
				<![CDATA[ 
					SELECT * 
					from t_pd_search_con_item 
					where PROPERTY_ID=:propertyId  and lifecycle = 1
					order by sort
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="SearchConditionItem.findSearchItemByPropertyIds" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据propertyIds查找对应的所有SearchConditionItem </description>
		<constructor-arg>
			<value>
				<![CDATA[ 
					SELECT * from t_pd_search_con_item where  lifecycle = 1 and
					PROPERTY_ID in(
						#foreach( $id in $propertyIds )
	    					$id,
						 #end
			       		 -1)
			       		  order by PROPERTY_ID desc
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	<bean id="SearchConditionItem.updateSearchConditionItemLang" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据searchConditionId查询该sid下的所有SearchConditionItem </description>
		<constructor-arg>
			<value>
				<![CDATA[ 
					update t_pd_search_con_item_lang set 
					name=:name
					where search_condition_item_id=:searchConditionItemId 
					and lang=:lang
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	<bean id="SearchConditionItem.findSearchConditionItemLangByScids" class="loxia.dao.support.DynamicQueryHolder">
		<description>根据id列表查询简要的分类信息</description>
		<constructor-arg>
			<value>
            <![CDATA[ 
                   select *from t_pd_search_con_item_lang  
                   where search_condition_item_id in(
                   	#foreach($id in $scids)
                   		$id,
                   	#end
                   	-1
                   ) 
                   and lang in(
                   	#foreach($lang in $langs)
                   		'$lang',
                   	#end
                   	'-1'
                   ) 
            ]]>
			</value>
		</constructor-arg>
	</bean>

	<bean id="SearchConditionItem.findSearchConditionItemlang" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
            <![CDATA[ 
                   select *from t_pd_search_con_item_lang  
                   where search_condition_item_id =:id 
                   and lang =:lang
            ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="SearchConditionItem.findSearchConditionItemMetDataByLang" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
            <![CDATA[ 
                select
					con.id as id,
					conLang.name as name,
					con.sort as sortNo
				from
					t_pd_search_con_item con,t_pd_search_con_item_lang conLang
				WHERE
					con.id=conLang.search_condition_item_id
					and con.lifecycle=1
					and conLang.lang=:lang
					order by con.sort
            ]]>
			</value>
		</constructor-arg>
	</bean>
	
</beans>