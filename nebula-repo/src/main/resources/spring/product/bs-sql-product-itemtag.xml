	<bean id="ItemTag.validateTagName" class="loxia.dao.support.DynamicQueryHolder">
		<description>验证分组名称</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		select * from T_PD_ITEMTAG where name=:tagName and lifecycle=1 
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
		<bean id="ItemTag.removeTagByIds" class="loxia.dao.support.DynamicQueryHolder">
		<description>通过ids批量删除ItemTag</description>
		<constructor-arg>
			<value>
				<![CDATA[  
		       		update T_PD_ITEMTAG
		       		set lifecycle=2
		       		 where 
		       		id in (
		       		#foreach( $id in $ids )
    					$id,
					 #end
		       		 -1)
		       		 
                 ]]>
			</value>
		</constructor-arg>
	</bean>		
	
</beans>