<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="SalesActivityScopeEntity.findAllSalesEntity" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
				<![CDATA[  
					select * from t_act_common_activity_sku_scope t where t.isActivity=true
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="MemberActivityScopeEntity.findAllMenberEntity" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
				<![CDATA[  
					select * from t_act_common_activity_member_scope t where t.isActivity=true
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="EntryPointEntity.findAllEntryPointEntity" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
				<![CDATA[  
					select * from t_act_channel_entry_scope t where t.isActivity=true
                 ]]>
			</value>
		</constructor-arg>
	</bean>
	
	<bean id="MemberChannelEntity.findAllMemberChannelEntity" class="loxia.dao.support.DynamicQueryHolder">
		<constructor-arg>
			<value>
				<![CDATA[  
					select * from t_act_channel_member_scope t where t.isActivity=true order by level desc
                 ]]>
			</value>
		</constructor-arg>
	</bean>

</beans>